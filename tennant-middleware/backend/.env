DEBUG=true

ENVIRONMENT=LOCAL

APP_NAME=tennant middleware
APP_VERSION=0.1.0
APP_HOST=http://0.0.0.0:5000

LOG_LEVEL=info
LOG_FORMAT=%(asctime)s %(levelname)s %(trace_id)s: %(message)s
LOG_BUFFER_SIZE=1024
LOG_FLUSH_INTERVAL=0.5

# Needs updating with frontend url when deployed
CORS_ORIGINS='["http://0.0.0.0:5000"]'
CORS_METHODS='["*"]'
CORS_HEADERS='["*"]'

# PG_DSN=postgresql+asyncpg://tennant-middleware:tennant-middleware@tennant-middleware_pg:5432/tennant-middleware
# TEST_PG_DSN=postgresql+asyncpg://tennant-middleware:tennant-middleware@tennant-middleware_pg:5432/tennant-middleware_test

TRACE_HEADER_NAME=x-trace-id

SENTRY_DSN=
SENTRY_DEBUG_PATH=/api/0/_/sentry

SECRET_KEY=secret
JWT_SECRET=jwt_secret

# Sap config
SAP_ODATA_BASE_URL=https://your-sap-server.com/sap/opu/odata/sap
SAP_SERVICE_USERNAME=your_sap_username
SAP_SERVICE_PASSWORD=your_sap_password
SAP_TIMEOUT_SECONDS=30

# Azure config
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_JWKS_URL=https://login.microsoftonline.com/your-tenant-id/discovery/v2.0/keys

# Email config
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USERNAME=noreply@tennant.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@tennant.com
SMTP_USE_TLS=true

MAX_EMAIL_SIZE_MB=50
MAX_FILES_PER_EMAIL=20
MAX_MATERIALS_PER_SEARCH=50

OSS_TOKEN_SERVICE_URL=https://your-oss-token-service.com
