DEBUG=true

ENVIRONMENT=LOCAL

APP_NAME=tennant middleware
APP_VERSION=0.1.0
APP_HOST=http://0.0.0.0:5000

LOG_LEVEL=info
LOG_FORMAT=%(asctime)s %(levelname)s %(trace_id)s: %(message)s
LOG_BUFFER_SIZE=1024
LOG_FLUSH_INTERVAL=0.5

; needs updating with frontend url when deployed
CORS_ORIGINS='["http://0.0.0.0:5000"]'
CORS_METHODS='["*"]'
CORS_HEADERS='["*"]'

; PG_DSN=postgresql+asyncpg://tennant-middleware:tennant-middleware@tennant-middleware_pg:5432/tennant-middleware
; TEST_PG_DSN=postgresql+asyncpg://tennant-middleware:tennant-middleware@tennant-middleware_pg:5432/tennant-middleware_test

TRACE_HEADER_NAME=x-trace-id

SENTRY_DSN=
SENTRY_DEBUG_PATH=/api/0/_/sentry

SECRET_KEY=secret
JWT_SECRET=jwt_secret

# Generic names - works for any backend service
BACKEND_SERVICE_BASE_URL=https://your-backend-service.com/api
BACKEND_SERVICE_AUTH_TYPE=basic  # Options: basic, bearer, oauth2, api_key
BACKEND_SERVICE_USERNAME=your_username
BACKEND_SERVICE_PASSWORD=your_password

# OAuth2 specific (if BACKEND_SERVICE_AUTH_TYPE=oauth2)
BACKEND_SERVICE_TOKEN_URL=https://your-backend-service.com/auth/token
BACKEND_SERVICE_CLIENT_ID=your_client_id
BACKEND_SERVICE_CLIENT_SECRET=your_client_secret

# API Key specific (if BACKEND_SERVICE_AUTH_TYPE=api_key)
BACKEND_SERVICE_API_KEY=your_api_key
BACKEND_SERVICE_API_KEY_HEADER=X-API-Key

# Connection settings
BACKEND_SERVICE_TIMEOUT_SECONDS=30
BACKEND_SERVICE_MAX_RETRIES=3

; azure config
GRAPH_TENANT_ID=your-tenant-id  # Usually same as AZURE_TENANT_ID
GRAPH_CLIENT_ID=your-graph-app-client-id
GRAPH_CLIENT_SECRET=your-graph-app-client-secret

# Optional: Use certificate instead of secret (more secure for production)
# GRAPH_CLIENT_CERTIFICATE_PATH=/path/to/cert.pem
# GRAPH_CLIENT_CERTIFICATE_THUMBPRINT=your-cert-thumbprint

# Email configuration
GRAPH_SENDER_MAILBOX=drawinglocator@tennantco.com
GRAPH_SAVE_TO_SENT_ITEMS=true
GRAPH_TIMEOUT_SECONDS=30

MAX_EMAIL_SIZE_MB=50
MAX_FILES_PER_EMAIL=20
MAX_MATERIALS_PER_SEARCH=50
