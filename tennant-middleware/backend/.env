DEBUG=true

ENVIRONMENT=LOCAL

APP_NAME=tennant middleware
APP_VERSION=0.1.0
APP_HOST=http://0.0.0.0:5000

LOG_LEVEL=info
LOG_FORMAT=%(asctime)s %(levelname)s %(trace_id)s: %(message)s
LOG_BUFFER_SIZE=1024
LOG_FLUSH_INTERVAL=0.5

# Needs updating with frontend url when deployed
CORS_ORIGINS='["http://0.0.0.0:5000"]'
CORS_METHODS='["*"]'
CORS_HEADERS='["*"]'

TRACE_HEADER_NAME=x-trace-id

SENTRY_DSN=
SENTRY_DEBUG_PATH=/api/0/_/sentry

SECRET_KEY=secret
JWT_SECRET=jwt_secret

# SPI API Configuration
SPI_BASE_URL=https://your-spi-server.com/api
SPI_USERNAME=your_spi_username
SPI_PASSWORD=your_spi_password
SPI_TIMEOUT_SECONDS=30

# Azure Entra ID config
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_JWKS_URL=https://login.microsoftonline.com/your-tenant-id/discovery/v2.0/keys

# Microsoft Graph API for Email (replaces SMTP)
GRAPH_CLIENT_ID=your-graph-client-id
GRAPH_CLIENT_SECRET=your-graph-client-secret
GRAPH_SENDER_MAILBOX=drawinglocator@tennantco.com

# Application limits
MAX_EMAIL_SIZE_MB=50
MAX_FILES_PER_EMAIL=20
MAX_MATERIALS_PER_SEARCH=50

# OSS Token Service
OSS_TOKEN_SERVICE_URL=https://your-oss-token-service.com